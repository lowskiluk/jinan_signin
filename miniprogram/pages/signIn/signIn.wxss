/**index.wxss**/

page {
  padding-top: 330rpx;
  background: #f6f6f6;
  background: url(https://7778-wxmini-9b3f96-1254279958.tcb.qcloud.la/signin_bg.jpg?sign=09002c01003348ec687c7292e8b10bb5&t=1547469113) no-repeat 50% 50%;
  background-size: cover;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container-hidden {
  display: none;
}
.container {
  display: flex;
}
.logo_c {
  position: absolute;
  right: 15rpx;
  top: 65rpx;
  text-align: left;
  float: left;
}

.logo {
  width: 380rpx;
  height: 220rpx;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  margin: 2px auto;
  height: 140rpx;
  width: 100%;
  background: transparent;
  border: 0px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: transparent;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader, .tunnel {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.uploader-text, .tunnel-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}

.tunnel {
  padding: 0 0 0 40rpx;
}

.tunnel-text {
  position: relative;
  color: #222;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.tunnel-text:first-child {
  border-top: none;
}

.tunnel-switch {
  position: absolute;
  right: 20rpx;
  top: -2rpx;
}

.disable {
  color: #888;
}

.service {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(#007aff, #0063ce);
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
  display: flex;
  align-content: center;
  justify-content: center;
  transition: all 300ms ease;
}

.service-button {
  position: absolute;
  top: 40rpx;
}

.service:active {
  box-shadow: none;
}

.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}

.realname {
  padding: 20rpx 32rpx 20rpx 32rpx;
  margin-bottom: 1px;
  border-radius: 50rpx;
  font: normal 38rpx/100% Verdana, Tahoma, sans-serif;
  width: 540rpx;
  height: 46rpx;
  background: rgb(245, 245, 245);
  box-shadow: rgba(255, 255, 251, 0.8) 0px 0px 10px inset, rgba(0, 0, 0, 0.3) 0px 0px 12px;
  transition: all 0.3s ease 0s;
}

.realname-focus {
  border: 2px #31d4c3 solid;
  background: rgb(255, 255, 255);
}

.realname-blur {
  border: 2px #e5e5e5 solid;
  background: rgb(245, 245, 245);
}

.realname-ph {
  color: #e5e5e5;
}

.radio-group {
  font-weight: bold;
  font-size: 31rpx;
  color: white;
  padding: 13rpx 28rpx 13rpx 28rpx;
  border-radius: 38rpx;
  background-color: rgba(255, 255, 255, 0.3); /*半透明*/
}

.radio {
  margin-right: 2.5rpx;
  margin-left: 2.5rpx;
}

.signin {
  margin-top: 80rpx;
}

.signin_button {
  font-weight: bold;
  font-size: 25px;
  color: white;
  border-radius: 50%;
  width: 260rpx;
  height: 260rpx;
  background: #31d4c3;
  text-align: center;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
}

#button {
  font-size: 50rpx;
  /* text-transform: uppercase;
  text-shadow: -1px -1px 1px rgba(0, 0, 0, 0.8); */
  color: white;
  border: 13rpx solid transparent;
  border-color: rgba(0, 0, 0, 0.1);
  background: #31d4c3;
  cursor: pointer;
  outline: 0 !important;
  animation: pulse 1s infinite alternate;
  transition: background 0.4s, border 0.2s, margin 0.2s;
}

#button:hover {
  background: #31d4c3;
  margin-top: -1px;
  animation: none;
}

#button:active {
  border-width: 0;
  margin-top: 5px;
}

#button:focus {
  border-width: 0;
  margin-top: 5px;
}

